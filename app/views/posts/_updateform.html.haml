.posts-wrapper
  .post
    .post-body
      .image-wrap
        = form_image_select(@post)
        = simple_form_for @post, html: { multipart: true } do |f|
          .row
            .col-md-12.text-center
              = f.error_notification
          .container-fluid
            .form-group.text-center
              %h4 Edit Caption:
            .text-center
              = f.input :caption, required: true, label: false, placeholder: 'Caption', input_html: { class: 'form-control' }
              %br/
            .form-group.text-center
              = f.button :submit, "Post", class: 'btn btn-lg btn-primary btn-block'
