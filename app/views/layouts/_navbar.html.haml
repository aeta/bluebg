%nav.navbar.navbar-default
  .navbar-container
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bsnavbar-collapse-1", "data-toggle" => "collapse", type: "button"}
        %span.sr-only "Toggle Navigation"
        %span.icon-bar
        %span icon-bar
      .navbar-brand= link_to "Blue Background", root_path
    .collapse.navbar-collapse#bs-navbar-collapse-1
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            = render 'notifications/notification_dropdown'
          %li
            = link_to current_user.user_name, profile_path(current_user.user_name)
          %li
            = link_to "#", hashtags_path
          %li
            = link_to "", new_post_path, class: 'glyphicon glyphicon-edit'
          %li
            = link_to '', eye_exit_path, remote: true, class: 'glyphicon glyphicon-eye-open opener', id: 'eye-button', method: :post
          %li
            = link_to "", destroy_user_session_path, method: :delete, class: 'glyphicon glyphicon-log-out'
        - else
          %li
            = link_to "Login", new_user_session_path
          %li
            = link_to "Register", new_user_registration_path
